<header class="navbar navbar-fixed-top">
  <div class="navbar-inner darkBlueBG headerlength">
    <div class="container">
<% if signed_in? %>  
      <div class="pull-left span6">
        <ul class="nav pull-left grayText">                  
          <li><%= link_to logoS, feed_path %></li><li class="topMargin"><%= form_for(:search, url: search_path) do |s|%><%= s.text_field :s_string, required: "required", placeholder: "Search..."%></li>
          <li class="topMargin"><%= s.submit "Search" , class: "btn btn-medium btn-primary"%></li>
        </ul>
          <% end %>
      </div>
      <nav>
        <ul class="nav pull-right grayText username">                  
          <li class="hMargin noPadding">
              <% if current_user.pic? %>
                <%= link_to (image_tag current_user.pic.url(:thumb)), user_path(current_user)%>
              <%else%>

                <%if current_user.gender != "M" %> 
                  <%= link_to (image_tag("pic_thumb_m.png", alt: "Rails")), user_path(current_user)%>
                <% else %>
                  <%= link_to (image_tag("pic_thumb_f.png", alt: "Rails")), user_path(current_user) %>
                <% end %>
              <%end%>
              <li class="hMargin noPadding"><%= link_to "#{current_user.fName} #{current_user.lName}", user_path(current_user) %>
            
          </li>
          
          <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
          <li><%= link_to "Sign out", signout_path, method: "delete" %></li> 
          <li>



          </li>        
        </ul>        
      </nav>
<% else %>
          <div class="pull-left">
            <%= link_to logoL, root_path %>            
          </div>
        <div class="pull-right">
          <table> 
            <%= form_for(:session, url: sessions_path) do |f| %>
            <tr>
              <td class="whiteText"><%= f.label :email,"Email or Phone", class: "smallText head" %></td>
              <td class="whiteText"><%= f.label :password,"Password", class: "smallText" %></td>
            </tr>
            <tr>
              <td><%= f.email_field :email, placeholder: "Email", required: "required", class: "input-medium" %>&nbsp;</td>
              <td><%= f.password_field :password, placeholder: "Password", required: "required", class: "input-medium" %></td>
              <td><%= f.submit "Log In", class: "btn btn-small btn-primary" %></td>
            </tr>
            <tr>
              <td class="grayText smallText"><%= f.check_box :remember_me %>&nbsp;Keep me logged in</td>
              <td class="grayText smallText">Forgot Password?</td>
            </tr>
            <% end %>
            </table>
        </div>
<% end %>

    </div>
  </div>
</header>
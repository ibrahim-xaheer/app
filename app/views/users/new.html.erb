
<h1>Sign Upssss</h1>
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
	<%= f.label :fName, "First Name" %><%= f.text_field :fName, class: "input-small", required: "required"%>
</div>	
<div class="field">
	<%= f.label :lName, "Last Name" %><%= f.text_field :lName, class: "input-small", required: "required"%>
</div>	
<div class="field">
	<%= f.label :email %><%= f.email_field :email, class: "input", required: "required"%>
</div>	
<div class="field">
	<%= f.label :password, "Password" %><%= f.password_field :password, class: "input", required: "required"%>
</div>	
<div class="field">
	<%= f.label :password_confirmation, "Confirm Password" %><%= f.password_field :password_confirmation, class: "input", required: "required" %>
</div>
<div class="Action">
	<%= f.submit "SignUp", class: "btn btn-large btn-primary" %>
</div>
<% end %>

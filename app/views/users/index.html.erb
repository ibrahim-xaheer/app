<% provide(:title, 'All users') %>
<h1>All users</h1>

<% will_paginate%>

<ul class="users nav">
  <% @users.each do |user| %>
    <li>
      <div>
      <%= link_to image_tag("picsmall.png", alt: "Rails") %>
      <%= link_to "#{user.fName} #{user.lName}", user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Delete", user, class: "btn btn-small btn-block btn-danger", 
                                  method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
      </div>
    </li>
    <br><br>
  <% end %>
</ul>

<%= will_paginate %>